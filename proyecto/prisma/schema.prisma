generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"  // Cambiar a "mysql"
  url = env("DATABASE_URL")
}

model Tarea {
  id    String @id @default(uuid())
  titulo  String
  descripcion String
  path String @unique
}

